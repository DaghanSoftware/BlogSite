@model EntityLayer.Concrete.Category
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<center>
    <h1>Yeni Kategori Oluştur</h1>
</center>
<center>
    @using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
    {
        <div class="form-row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <label for="validationCustom01">Blog Başlığı</label>

                <input asp-for="CategoryName" type="text" class="form-control" id="validationDefault01" placeholder="">
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
        </div>
        <br />

        <div class="form-row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <label for="validationCustom02">Blog İçeriği</label>
                <textarea asp-for="CategoryDescription" class="form-control"> </textarea>
                <span asp-validation-for="CategoryDescription" class="text-danger"></span>
            </div>
        </div>
        <br />

       
        <br />
        <br />
        <button type="submit" class="btn btn-primary submit mb-4">Blog'u' Kaydet</button>


    }
</center>

