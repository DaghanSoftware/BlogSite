@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <center>
                <h1 class="card-title">Oluşturduğum Bloglarım</h1>
            </center>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Blog Başlığı</th>
                        <th>Oluşturma Tarihi</th>
                        <th>Kategori</th>
                        <th>Durumu</th>
                        <th>Görüntülenme Oranı</th>
                        <th>Son 1 ayda Görüntülenme</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr class="table-primary">
                        @*<td class="py-1">
         <img src="/writer/assets/images/faces-clipart/pic-1.png" alt="image" />
        </td>*@
                        <td>@item.BlogID</td>
                        <td>@item.BlogTitle</td>
                        <td>@item.BlogCreateDate</td>
                        <td>@item.CategoryID</td>
                        @if (item.BlogStatus =="True")
                        {
                            <td><label class="badge badge-success">Yayında</label></td>
                        }
                        else
                        {
                            <td><label class="badge badge-danger">Pasif</label></td>
                        }

                        <td>
                            <div class="progress">
                                <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </td>

                        <td class="text-danger"> 28.76% <i class="mdi mdi-arrow-down"></i></td>

                        <td><a href="#" class="btn btn-danger">Sil</a></td>
                        <td><a href="#" class="btn btn-inverse-primary">Düzenle</a></td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
<center>
    <a href="#" class="btn btn-primary">Yeni Blog Oluştur</a>
</center>


