<div class="tech-btm">
    
    <p> Paylaşılan tüm bloglardan mail alın</p>
    <form method="post">
        <input type="email" placeholder="Email Adresinizi girin." required="" id="txtmail" name="Mail">
        <input type="submit" id="btn" value="Abone OL">
    </form>

</div>

<script type="text/javascript">
    $("#btn").click(function () {
        let values = {
            Mail: $("#txtmail").val()
        };
        $.ajax({
            type: "post",
            url: "/NewsLetter/SubscribeMail/",
            data: values,
            success: function (func) {
                let result = jQuery.parseJSON(func);
            }
        });
    });
</script>