@model UserSignInViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Giriş Yap</h3>
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form asp-action="Index" asp-controller="Login" method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1 mb-2">Kullanıcı ADINIZ</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" asp-for="@Model.username" aria-describedby="emailHelp" placeholder="">
                        <small id="emailHelp" class="form-text text-muted">Mail adresiniz kimseyle paylaşılmayacaktır..</small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1 mb-2">Şifre</label>
                        <input type="text" class="form-control" asp-for="@Model.password" id="exampleInputPassword1" placeholder="">
                    </div>
                    <div class="form-check mb-2">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Beni Hatırla</label>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Giriş Yap</button>
                    <p><a asp-controller="RegisterUser" asp-action="Index"> Bir hesabın yok mu ?  Kayıt Ol</a></p>
                </form>
            </div>
        </div>
    </div>
</section>

